<div>
    <p><strong>Name:</strong> <%= @attraction.name %></p>
    <p><strong>Tickets Required:</strong> <%= @attraction.tickets %></p>
    <p><strong>Minimum Height:</strong> <%= @attraction.min_height %></p>
    <p><strong>Nausea Rating:</strong> <%= @attraction.nausea_rating %></p>
    <p><strong>Happiness Rating:</strong> <%= @attraction.happiness_rating %></p>
    <% if @user.admin %>
    <p><%= link_to "Edit Attraction", edit_attraction_path(@attraction) %></p>
    <% else %>
    <%= form_for @user, method: :patch do |f| %>
        <%= f.hidden_field :attraction_id, value: @attraction.id %>
        <%= f.submit "Go on this ride" %>
    <% end %>
    <% end %>
    <br>
    <p><%= link_to "See attractions", attractions_path %></p>
</div>